#!/usr/bin/env python3
import sys

def factors(n):
        result = []
        for i in range(2, n//2 + 1):
                if n % i == 0:
                        result.append((i, n//i))
                        return result

def main():
        filename = sys.argv[1]
        with open(filename, 'r') as f:
                lines = f.readlines()
                for line in lines:
                        n = int(line.strip())
                        factorizations = factors(n)
                        for factorization in factorizations:
                                print(f"{n}={factorization[0]}*{factorization[1]}")

if __name__ == '__main__':
        main()
